<link href="~/Content/harristeq.css" rel="stylesheet" />

<style>
    .calColumn {
        background-color: aliceblue;
        width: 36px;
        text-align: center;
    }
    .calColumn.alt {
        background-color: #efefef;
    }
    .alt {
        
    }

    #topTable {
        /*border:1px solid red;*/ 
        padding: 0px;
        height: 100px; 
        width: 100%;
        margin: 0px;
        border-bottom: 1px silver solid;
    }

    #tdColScrollSpacer {
        background-color: #ffffff;
    }
    #divScroll {
        width:100%; 
        height: 200px; 
        overflow: auto; 
    }
    
    .dayLabel{}
    .dayLabel div {
        margin-left: auto;
        margin-right: auto;
        margin-top: 2px;
    }
    .dateLabel{}
    .dateLabel div {
        margin-left: auto;
        margin-right: auto;
        margin-top: 5px;
    }
    .alertLevel1 {
        text-align: center;
    }
    .alertLevel1 div.colAlert {
        width: 20px;
        background-color: orange;
        color: whitesmoke;
        border-radius: 3px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 5px;
    }
    .alertLevel2{}
    .alertLevel2 div.colAlert {
        width: 20px;
        background-color: red;
        color: whitesmoke;
        border-radius: 10px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 5px;
    }
    .alertLevel3{}
    .alertLevel3 div.colAlert {
        width: 20px;
        background-color: darkolivegreen;
        color: whitesmoke;
        border-radius: 3px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 5px;
        margin-bottom: 5px;
    }
    .weekend, .alt.weekend {
        background-color: gainsboro;
    }

</style>

