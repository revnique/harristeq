<link href="~/Content/harristeq.css" rel="stylesheet" />
<div class="contentContainer" ng-app="harristeqApp" ng-controller="harristeqController">
        <div class="container">
            <div id="divListContainer">
                <input type="text" id="txtListName" ng-model="taskList().title" />
                <ul id="ulTaskList">
