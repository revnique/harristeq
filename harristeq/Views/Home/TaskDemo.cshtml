                        <input type="text" id="txtTask" ng-model="task.title" ng-class="{strike: task.isDone}" ng-enter="afterTaskEdit()" ng-disabled="task.isDone" />
                        <input type="button" value="X" ng-click="removeTask(task.taskItemId)" />
